<h1>Edit</h1>

<%= form_for(@user.course, :url => {:action => :update, :controller => :courses}) do |f| %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :schoolyear %><br>
    <%= f.text_field :schoolyear %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Save changes" %>
  </div>
<% end %><br>
